{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@socaity/media-toolkit": ["../media-toolkit-js/src/index.ts"] // note: this is done to develop both packages in one vscode workspace. You can remove this line if you are not doing the same.
    }
  },
  "include": ["sdk/**/*.ts", "README.md", "LICENSE"],
  "exclude": ["node_modules", "dist"]
}
